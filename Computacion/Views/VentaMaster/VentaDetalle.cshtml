@model IEnumerable<Computacion.Models.VentaDetalle>

@{Layout = null; }

<table class="table">
    <tr class="danger">
        <th>
            @Html.DisplayNameFor(model => model.IdArticulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.PrecioUnitario)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cantidad)
        </th>   
        
        <th>
            @Html.DisplayNameFor(model => model.Total)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr class="info">
        <td>
            @Html.TextBoxFor(modelItem => item.IdArticulo, new { id = "IdArticulo", hidden = "hidden" })
            @Html.DisplayFor(modelItem => item.DescripcionArticulo)
        </td>
        <td>
            $@Html.DisplayFor(modelItem => item.PrecioUnitario)
        </td>
        <td>
           @* @Html.TextBoxFor(modelItem => item.Cantidad, new { id = "Cantidad", onchange = "ModificarCantidad(@item.IdArticulo)", type = "number" })*@
           
            <input id="@item.IdArticulo" name="Cantidad" onchange="ModificarCantidad(@item.IdArticulo)" type="number" value="@item.Cantidad" />
            @*<input id="BtnQuitar" type="button" value="Actualizar Cantidad" onclick="ModificarCantidad()" />*@
        </td>        
        <td>
            $@Html.DisplayFor(modelItem => item.Total)
        </td>
        <td>
            <a href="#" id="BtnQuitar" class="btn btn-success" onclick="QuitarArticulo(@item.IdArticulo)">Quitar</a>
            @*<input id="BtnQuitar" class="btn btn-succes" type="button" value="Quitar" onclick="QuitarArticulo(@item.IdArticulo)" />*@
        </td>
    </tr>
}

</table>

<h3> Total: $@ViewBag.Total </h3>

<script src="~/Scripts/Mis Scripts/ModificarDetalle.js"></script>
